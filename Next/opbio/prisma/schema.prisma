generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}



model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  username String @unique
  password String
  invite String @unique
  otpVerified Boolean
  twoFactorAuth Boolean
}

model Invites {
  code String @unique
  user String?
}

model Otp {
  email String @unique
  code String
  date String
}

model Settings {
  username String @unique
  backGroundImg String
  avatarImg String
  bannerImg String
  mainBorderColor String
  linksTable String
  groupsTable String
  profileDescription String
  nick String
  discordInfo String
  views Int
  discordStatusBorderColor String
}